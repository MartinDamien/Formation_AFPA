{% extends "base.html.twig" %}

{% block title %}
	- Films
{% endblock %}
{% block header %}
	<h1>
		Films
	</h1>
{% endblock %}
{% block content %}
	{% for film in films %}
		<div class="film">
			<h2>
				{{ film.title }}
			</h2>
			<p>
				{{ film.description }}
			</p>
			<p>
				{{ film.date }}
			</p>
			<p>
				{{ film.duree }}
			</p>
			<p>
				{{ film.genre }}
			</p>
			<p>
				{{ film.realisateur }}
			</p>
			<p>
				{{ film.acteurs }}
			</p>
			<p>
				{{ film.note }}
			</p>
	<a href="http://localhost/http/alloCine/Film/' . $films->getId() . '">{{ film.titre | upper }}</a><br/>
	{% endfor %}
	<a href="http://localhost/http/alloCine/Film/nouveau">+</a>
{% endblock %}
