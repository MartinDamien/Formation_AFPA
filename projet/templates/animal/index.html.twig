{% extends 'base.html.twig' %}

{% block title %}liste des animaux{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		a{

			text-decoration: none;
			color: black;
		}
	</style>

	{% for animal in animal %}
<h1>{{ animal.espece.libelle }}</h1>
<h2><a href="{{ path('app_animal_show', {'id': animal.id}) }}">{{ animal.nom }}</a></h2>
<img src="{{ animal.image }}" alt="{{ animal.nom }}" width="200px" height="200px">
<h3>{{ animal.poid }}kg/{{ animal.description }}.</li></h3>
{% endfor %}
<a href="{{ path('app_animal_add') }}">Ajouter un animal</a>
{% endblock %}
